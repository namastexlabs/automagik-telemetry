{
  "name": "@automagik/telemetry",
  "version": "0.1.3",
  "description": "Privacy-first, opt-in telemetry SDK for the Automagik ecosystem",
  "keywords": ["telemetry", "opentelemetry", "observability", "privacy"],
  "author": "Automagik Team <team@namastex.ai>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/namastexlabs/automagik-telemetry.git",
    "directory": "typescript"
  },
  "bugs": {
    "url": "https://github.com/namastexlabs/automagik-telemetry/issues"
  },
  "homepage": "https://github.com/namastexlabs/automagik-telemetry#readme",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest --coverage",
    "test:unit": "jest --coverage --testPathIgnorePatterns=integration",
    "test:integration": "RUN_INTEGRATION_TESTS=true jest integration.test.ts --coverage=false",
    "test:integration:clickhouse": "RUN_INTEGRATION_TESTS=true jest clickhouse.integration.test.ts --coverage=false",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src",
    "prepublishOnly": "pnpm build"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
